{
  "compilerOptions"               : {
    "declaration"           : false,
    "emitDecoratorMetadata" : true,
    "experimentalDecorators": true,
    "module"                : "commonjs",
    "moduleResolution"      : "node",
    "outDir"                : "dist",
    "removeComments"        : true,
    "skipDefaultLibCheck"   : true,
    "sourceMap"             : true,
    "target"                : "es5"
  },
  "compileOnSave"                 : false,
  "include"                       : [
    "src/**/*.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker"       : true,
    "resolveGlobs"      : true,
    "useTranspileModule": true,
    "useCache"          : true
  }
}
